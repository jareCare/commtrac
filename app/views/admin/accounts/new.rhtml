<h2>New Association for <%= h @company.name %></h2>

<%= error_messages_for :account -%>
<% form_for :account, :url => admin_accounts_path(:company_id => @company) do |form| %>
  <p>
    <label for="account_organization_id">Broker or Vendor</label>
    <%= form.select :organization_id, available_organizations %>
  </p>
  <p>
    <label for="account_number">Account Name or Number</label>
    <%= form.text_field :number %>
  </p>
  <p>
    <%= submit_tag 'Submit' %> / <%= link_to 'Cancel', admin_company_path(@company) %>
  </p>
<% end %>