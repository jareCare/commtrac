* {
  font: 15px "Times New Roman", Georgia, serif;
}

h1, h2, h3 {
  font-size: 16px;
  font-weight: bold;
}

p#flash {
  color: #f00;
}

#errorExplanation {
  margin: 1em 0.5em;
  font-weight: bold;
  color: #dc2229;
}

#errorExplanation ul {
  list-style: square;
  padding-left: 2em;
}

.fieldWithErrors {
  border-top: 4px solid #f00;
  border-bottom: 4px solid #f00;
  border-left: 2px solid #f00;
  border-right: 2px solid #f00;
  display: inline;
}

dl dt {
  font-weight: bold;
}

th {
  font-weight: bold;
}

tr.totals-row td {
  font-weight: bold;
}

a {
  color: #00f;
}

a:hover {
  color: #fff;
  background-color: #00f;
}

td.number {
  text-align: right;
}